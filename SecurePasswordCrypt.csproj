<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<PackageId>SecurePasswordCrypt</PackageId>
	<Version>1.0.0</Version>
	<Authors>AlWIl17</Authors>
	<Description>AES-GCM + PBKDF2 encryption and hashing library</Description>
	<TargetFramework>net9.0</TargetFramework>
	<ImplicitUsings>enable</ImplicitUsings>
	<Nullable>enable</Nullable>
	<RepositoryUrl>https://github.com/Alwil17/SecurePasswordCrypt</RepositoryUrl>
	<PackageReadmeFile>README.md</PackageReadmeFile>
	  <IncludePackageReadmeFile>true</IncludePackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Update="README.md">
		<Pack>True</Pack>
		<PackagePath>\</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
